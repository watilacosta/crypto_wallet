<!DOCTYPE html>
<html>
  <head>
    <title>CryptoWallet</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <% if Rails.env.development? %>
      <div class="ambiente">
        <b> >>> Desenvolvimento <<< </b>
      </div>
    <% end %>

    <ul>
      <li><%= link_to "Home", root_path %></li>
      <li><%= link_to "Coins", coins_path %></li>
      <li><%= link_to "Mining Types", mining_types_path %></li>
    </ul>

    <div class="container">
      <%= yield %>
    </div>
  </body>
</html>
